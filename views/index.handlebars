<h1 class="jumbotron jumbotron-fluid banner">The Home Made Burger Place!</h1>
<div class="container">
  <div class="row">
    <div class="col-12">
      <img src="../assets/img/burger.jpg" class="burgerImage" alt="The funny burger image">
    </div>
  </div>
  <div class="container">
    <div class="row addingBurger">
      <div class="col-12 center">
        <h2 class="input-text">Add a Burger</h2>
        <form id="create-form">

          <div class="form-group">
            <label for="bun" class="input-text">Burger Name:</label><br>
            <input type="text" class="form-control" id="bun" name="name">
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-12">
                <label for="devoured" class="input-text">Have you devoured this burger?</label><br>
                <div class="banner">
                  <input type="radio" name="devoured" value="0" id="another" checked> Not Devoured!
                  <br>
                  <input type="radio" name="devoured" value="1" id="devoured"> Devoured!
                </div>
              </div>
            </div>
          </div>

          <button type="submit" class="btn btn-outline-secondary">Add Burger</button>
        </form>
      </div>
    </div>

  </div>


  <div class="row">
    <div class="col-6 not-devoured-css">
      <h2 class="text-center">Burgers that are not devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6 devoured-css">
      <h2 class="text-center">Burgers that are devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

</div>