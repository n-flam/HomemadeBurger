<h1 class="jumbotron jumbotron-fluid banner">The Burger Place!</h1>

<div class="row" id="burgerImage">
  <img src="../assets/img/burger.jpg" class="rounded" alt="The funny burger image">
</div>

<div class="row addingBurger">

  <div class="col-12">

    <h2 class="col-12">Add a Burger</h2>
    <form id="create-form">

      <div class="form-group">
        <label for="bun">Burger Name:</label><br>
        <input type="text" id="bun" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">devoured?</label><br>
        <input type="radio" name="devoured" value="0" id="another" checked> not devoured!
        <input type="radio" name="devoured" value="1" id="devoured"> devoured!
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-6">
    <h2>Burgers that are not devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-6">
    <h2>Burgers that are devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>